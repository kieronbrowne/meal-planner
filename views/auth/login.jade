extends ../layout

block content
  br
  br
  .row
    .span2
    .span6n
      if(typeof err != 'undefined')
        .alert.alert-error= err

      form.form-horizontal(action="/auth/login", method="post")
        fieldset
          legend Existing Users
          .control-group
            label.control-label(for="username") Username
            .controls
              input#username(type="text", name="username", value=username)
          
          .control-group
            label.control-label(for="password") Password
            .controls
              input#password(type="password", name="password", value="")
    
          .form-actions
            input.btn.btn-primary(type="submit", value="Login")
extends ../layout

block content
  a.pull-right(href='/recipe/#{recipe.id}/edit') Edit
  h2= recipe.name
  p Serves #{recipe.portions}

  h3 Ingredients

  if recipe.ingredients.length > 0
    table
      for ingredient in recipe.ingredients
        tr
          td(style='text-align: right;')= ingredient.getQuantityStr()
          td= ingredient.name
  else
    div.alert.alert-error No ingredients

  h3 Method
  div= recipe.method
